<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="../css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <title>Products</title>
</head>
<body>
    <div class="container" style="margin-top:1rem;">
        <h3>Products List</h3>
        <a href="/"><button class="btn btn-primary btn-fill">Home</button></a>
        <a href="/product/create"><button class="btn btn-success" >Add Product</button></a>
        <div class="search-bar-container" style="margin:2rem;">
            <form method="GET" action="/product/search">
                <div class="form-inline">
                    <div class="row">
                            <div class="col-sm-6 my-1">
                            <input class="form-control" type="text" name="item" id="item" placeholder="Search item...">
                        </div>
                        <div class="col-sm-6 my-1">
                            <button class="btn btn-primary mb-2" type="submit">Search</button>
                        </div>
                    </div>

                </div>
            </form>
        </div>
        <div class="container d-flex" style="margin-top: 1rem; gap:1rem;">
            <div class="row row-cols-auto" style="gap: 1rem;">
                <% if(products && products.length > 0){ %>
                    <% products.forEach(function(product) { %>
                        <div class="card text-center" style="width:18rem; padding-left:0; padding-right:0;">
                            <div class="card-body">
                                <h5 class="card-title"> <b>Product Name: </b> <%= product.name %></h5>
                                <h6 class="card-subtitle mb-2 text-muted"> Price: <%= product.price %></h6>
                                <div class="card-text">About Product: <%= product.description %></div>
                            </div>
                            <div class="card-footer" style="width: 100%;">
                                <a href="/product/details/<%=product.id%>" class="btn btn-primary pull-down">View Product</a>
                                <a href="/product/edit/<%=product.id%>" class="btn btn-success">Edit Product</a>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>

        </div>
    </div>
</body>
</html>